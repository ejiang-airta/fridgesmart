{
  "expo": {
    "name": "FridgeSmart",
    "slug": "fridgesmart",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "splash": {
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "FridgeSmart needs access to your camera to take photos of food items.",
        "NSPhotoLibraryUsageDescription": "FridgeSmart needs access to your photos to save food item images.",
        "NSMicrophoneUsageDescription": "FridgeSmart does not require microphone access.",
        "UIBackgroundModes": [
          "fetch",
          "remote-notification"
        ]
      },
      "bundleIdentifier": "com.fridgesmart.app",
      "buildNumber": "1"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.fridgesmart.app"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow FridgeSmart to access your camera to take photos of food items."
        }
      ],
      [
        "expo-notifications",
        {
          "color": "#ffffff"
        }
      ]
    ]
  }
}
